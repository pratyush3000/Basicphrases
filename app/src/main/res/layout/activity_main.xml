<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.kpexample.basicphrases.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"

            android:text="Do you speak english?"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="Do you speak english?"
            android:onClick="playPhrase"/>

        <Button
            android:id="@+id/button2"

            android:text="goodevening"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="goodevening"
        android:onClick="playPhrase"/>
        <Button
            android:id="@+id/button3"

            android:text="hello"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="hello"
            android:onClick="playPhrase"/>

        <Button
            android:id="@+id/button4"

            android:text="how are you"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="how are you"
            android:onClick="playPhrase"/>

        <Button
            android:id="@+id/button5"

            android:text="i live in"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="i live in"
            android:onClick="playPhrase"/>
        <Button
            android:id="@+id/button6"

            android:text="My name is"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="my name is"
            android:onClick="playPhrase"/>
        <Button
            android:id="@+id/button7"

            android:text="please"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="please"
            android:onClick="playPhrase"/>
        <Button
            android:id="@+id/button8"

            android:text="welcome"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="welcome"
            android:onClick="playPhrase"/>
    </GridLayout>
</android.support.constraint.ConstraintLayout>
